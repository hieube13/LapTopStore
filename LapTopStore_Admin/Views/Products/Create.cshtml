            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-description">Cấu hình máy</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic" >
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Tên sản phẩm</label>
                        <input type="text" class="form-control" id="productName" asp-for="ProductName">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="ShortDesc">Mô tả sản phẩm</label>
                        <input type="text" class="form-control" id="productDesc" asp-for="ProductDescription">
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productPrice">Giá bán</label>
                            <input type="text" class="form-control" id="productPrice" asp-for="ProductPrice">
                        </div>

                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productPrice">Giá giảm</label>
                            <input type="text" class="form-control" id="productDiscount" asp-for="ProductDiscount">
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productCategory">Danh mục</label>
                            <select class="custom-select" id="category" asp-for="CategoryId" style="min-width: 200px;" asp-items="ViewBag.Danhmuc">
                                <option value="" disabled selected>Chọn danh mục</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productName">số lượng hàng tồn kho</label>
                            <input type="text" class="form-control" asp-for="ProductInStock">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="font-weight-semibold" for="image1">Ảnh đại diện</label>
                        <div id="image1-container">
                            <img src="" alt="Image 1" class="img-thumbnail" id="image1-preview" style="max-width: 150px; max-height: 150px;">
                            <button type="button" class="btn btn-danger btn-sm mt-2" id="image1-delete" style="display: none;" onclick="deleteImage('#image1-container', '#image1-delete', 'imageChange1')">Xóa ảnh</button>
                        </div>
                        <input name="fThumb" type="file" id="image1" class="form-control-file" asp-for="PrImage1" multiple onchange="handleImageChange('#image1', '#image1-preview', '#image1-delete', '#image1-container', 'imageChange1')">
                        <span asp-validation-for="PrImage1" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="m-t-25">
                            <div class="form-group d-flex align-items-center">
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="homeFlag" name="HomeFlag">
                                    <label for="homeFlag"></label>
                                </div>
                                <label>HomeFlag</label>
                            </div>
                            <div class="form-group d-flex align-items-center">
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="bestSeller" name="BestSeller">
                                    <label for="bestSeller"></label>
                                </div>
                                <label>BestSeller</label>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-option">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="image2">Ảnh 2 của máy</label>
                        <div id="image2-container">
                            <img src="" alt="Image 2" class="img-thumbnail" id="image2-preview" style="max-width: 150px; max-height: 150px;">
                            <button type="button" class="btn btn-danger btn-sm mt-2" id="image2-delete" style="display: none;" onclick="deleteImage('#image2-container', '#image2-delete', 'imageChange2')">Xóa ảnh</button>
                        </div>
                        <input name="fThumb" type="file" id="image2" class="form-control-file" asp-for="PrImage2" multiple onchange="handleImageChange(this, '#image2-preview', '#image2-delete', '#image2-container', 'imageChange2')">
                        <span asp-validation-for="PrImage2" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="font-weight-semibold" for="image3">Ảnh 3 của máy</label>
                        <div id="image3-container">
                            <img src="" alt="Image 3" class="img-thumbnail" id="image3-preview" style="max-width: 150px; max-height: 150px;">
                            <button type="button" class="btn btn-danger btn-sm mt-2" id="image3-delete" style="display: none;" onclick="deleteImage('#image3-container', '#image3-delete', 'imageChange3')">Xóa ảnh</button>
                        </div>
                        <input name="fThumb" type="file" id="image3" class="form-control-file" asp-for="PrImage3" multiple onchange="handleImageChange('#image3', '#image3-preview', '#image3-delete', '#image3-container', 'imageChange3')">
                        <span asp-validation-for="PrImage3" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="font-weight-semibold" for="image4">Ảnh 4 của máy</label>
                        <div id="image4-container">
                            <img src="" alt="Image 4" class="img-thumbnail" id="image4-preview" style="max-width: 150px; max-height: 150px;">
                            <button type="button" class="btn btn-danger btn-sm mt-2" id="image4-delete" style="display: none;" onclick="deleteImage('#image4-container', '#image4-delete', 'imageChange4')">Xóa ảnh</button>
                        </div>
                        <input name="fThumb" type="file" id="image4" class="form-control-file" asp-for="PrImage4" multiple onchange="handleImageChange('#image4', '#image4-preview', '#image4-delete', '#image4-container', 'imageChange4')">
                        <span asp-validation-for="PrImage4" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-description">
            <div class="form-group col-md-6">
                <label class="font-weight-semibold" for="productCategory">Màu sắc</label>
                @*<select class="custom-select" id="colorCategory" style="min-width: 200px;" asp-items="ViewBag.Color">
                    <option value="" disabled selected>Chọn màu</option>
                </select>*@

                <select class="custom-select" id="colorCategory" style="min-width: 200px;">
                    <option value="" disabled selected>Chọn danh mục</option>
                    @foreach (var color in ViewBag.Color)
                    {
                            <option value="@color.AttrId">@color.AttrValue</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-6">
                <label class="font-weight-semibold" for="cpuCategory">CPU</label>
                <select class="custom-select" id="cpuCategory" style="min-width: 200px;">
                    <option value="" disabled selected>Chọn CPU</option>
                            @foreach (var cpu in ViewBag.CPU)
                            {
                            <option value="@cpu.AttrId">@cpu.AttrValue</option>
                            }
                </select>
            </div>

            <div class="form-group col-md-6">
                <label class="font-weight-semibold" for="ramCategory">RAM</label>
                <select class="custom-select" id="ramCategory" style="min-width: 200px;">
                    <option value="" disabled selected>Chọn RAM</option>
                            @foreach (var ram in ViewBag.RAM)
                            {
                            <option value="@ram.AttrId">@ram.AttrValue</option>
                            }
                </select>
            </div>

            <div class="form-group col-md-6">
                <label class="font-weight-semibold" for="hddCategory">Ổ cứng</label>
                <select class="custom-select" id="hddCategory" style="min-width: 200px;">
                    <option value="" disabled selected>Chọn ổ cứng</option>
                            @foreach (var driver in ViewBag.Driver)
                            {
                            <option value="@driver.AttrId">@driver.AttrValue</option>
                            }
                </select>
            </div>

            <div class="form-group col-md-6">
                <label class="font-weight-semibold" for="screenCategory">Màn hình</label>
                <select class="custom-select" id="screenCategory" style="min-width: 200px;">
                    <option value="" disabled selected>Chọn màn hình</option>
                            @foreach (var screen in ViewBag.Screen)
                            {
                            <option value="@screen.AttrId">@screen.AttrValue</option>
                            }
                </select>
            </div>

            <div class="form-group col-md-6">
                <label class="font-weight-semibold" for="osCategory">Hệ điều hành</label>
                <select class="custom-select" id="osCategory" style="min-width: 200px;">
                    <option value="" disabled selected>Chọn hệ điều hành</option>
                            @foreach (var system in ViewBag.System)
                            {
                            <option value="@system.AttrId">@system.AttrValue</option>
                            }
                </select>
            </div>

        </div>
    </div>
